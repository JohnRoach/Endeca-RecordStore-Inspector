<?xml version="1.0" encoding="UTF-8"?>
<?import com.oracle.ateam.endeca.tools.rsi.component.ProgressDialog?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>

<fx:root type="com.oracle.ateam.endeca.tools.rsi.component.ProgressDialog" xmlns:fx="http://javafx.com/fxml">

    <scene>
        <Scene>
            <VBox alignment="CENTER_LEFT" prefWidth="320" prefHeight="60"
                  stylesheets="/css/styles.css"
                  styleClass="popup-dialog">

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label fx:id="progressMessage" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                    <ProgressBar fx:id="progressBar"/>
                    <Button fx:id="cancelButton" defaultButton="true" mnemonicParsing="false" text="Cancel" onAction="#onCancelButtonClicked"/>
                </HBox>

            </VBox>
        </Scene>
    </scene>

</fx:root>
